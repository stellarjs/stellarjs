{
  "name": "@stellarjs/redux-stellar",
  "version": "0.7.5",
  "license": "MIT",
  "main": "lib-es6/index.js",
  "browser": "lib/index.browser.js",
  "src": [
    "src/**/*"
  ],
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/*.js",
      "!src/index.js",
      "!src/index.browser.js"
    ],
    "coverageDirectory": "../../.artifacts/coverage/redux-stellar",
    "testResultsProcessor": "../../node_modules/jest-junit"
  },
  "jest-junit": {
    "suiteName": "tests",
    "output": "../../.artifacts/test_results/redux-stellar.xml",
    "usePathForSuiteName": "true"
  },
  "scripts": {
    "ci": "yarn run lint && yarn run test-coverage",
    "clean": "rimraf lib lib-es6",
    "compile": "yarn run compile:es6 && yarn run compile:umd",
    "compile:es6": "babel ./src  --out-dir ./lib-es6",
    "compile:umd": "webpack -p",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublish": "yarn run compile",
    "lint": "eslint --format junit --output-file ../../.artifacts/lint_results/redux-stellar.xml src",
    "lint:fix": "eslint src --fix"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@stellarjs/engine.io-client": "^0.7.5",
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "jest": "^20.0.4",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "@stellarjs/core": "^0.7.2",
    "lodash": "^4.17.4",
    "uuid": "^3.1.0"
  },
  "peerDependencies": {
    "@stellarjs/engine.io-client": "^0.7.5",
    "redux-promise-middleware": "^4.3.0"
  }
}

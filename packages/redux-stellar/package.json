{
  "name": "@stellarjs/redux-stellar",
  "version": "0.7.2",
  "license": "MIT",
  "main": "lib-es6/index.js",
  "src": [
    "src/**/*"
  ],
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "scripts": {
    "ci": "yarn run lint && yarn run test-coverage",
    "clean": "rimraf lib lib-es6",
    "compile": "yarn run compile:es6",
    "compile:es6": "babel ./src  --out-dir ./lib-es6",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublish": "yarn run compile",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@stellarjs/engine.io-client": "^0.7.3",
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "jest": "^20.0.4",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "@stellarjs/core": "^0.7.1",
    "lodash": "^4.17.4",
    "uuid": "^3.1.0"
  },
  "peerDependencies": {
    "@stellarjs/engine.io-client": "^0.7.3",
    "redux-promise-middleware": "^4.3.0"
  }
}

{
  "name": "@stellarjs/transport-socket",
  "version": "0.8.4",
  "license": "MIT",
  "main": "lib-es6/index.js",
  "browser": "lib/index.browser.js",
  "src": [
    "src/**/*"
  ],
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/*.js",
      "!src/index.js",
      "!src/index.browser.js"
    ],
    "coverageDirectory": "../../.artifacts/coverage/transport-socket",
    "testResultsProcessor": "../../node_modules/jest-junit"
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "../../.artifacts/test-results/transport-socket.xml",
    "usePathForSuiteName": "true"
  },
  "scripts": {
    "ci": "yarn run lint:ci && yarn run test-coverage",
    "clean": "rimraf lib lib-es6",
    "compile": "yarn run compile:es6 && yarn run compile:umd",
    "compile:es6": "babel ./src --out-dir ./lib-es6",
    "compile:umd": "webpack -p",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublish": "yarn run compile",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:ci": "eslint --quiet --format junit --output-file ../../.artifacts/lint_results/transport-socket.xml src"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "stellarjs/stellar",
  "keywords": [
    "microservices",
    "es6",
    "stellar",
    "stellarjs"
  ],
  "author": "Andres Olave",
  "contributors": [],
  "bugs": {
    "url": "https://github.com/sloops77/stellarjs/issues"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-better-mutation": "^1.1.2",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-lodash": "2.4.4",
    "eslint-plugin-promise": "3.5.0",
    "jest": "^20.0.4",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "@stellarjs/core": "^0.8.4",
    "bluebird": "^3.4.7",
    "lodash": "^4.17.4"
  }
}

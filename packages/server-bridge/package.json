{
  "name": "@stellarjs/server-bridge",
  "version": "0.11.2",
  "license": "MIT",
  "main": "lib-es6/index.js",
  "src": [
    "src/**/*"
  ],
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "!src/index.js",
      "src/**/*"
    ],
    "coverageDirectory": "../../.artifacts/coverage/server-bridge",
    "testResultsProcessor": "../../node_modules/jest-junit"
  },
  "jest-junit": {
    "suiteName": "tests",
    "output": "../../.artifacts/test_results/server-bridge.xml",
    "usePathForSuiteName": "true"
  },
  "scripts": {
    "ci": "yarn run lint:ci && yarn run test-coverage",
    "clean": "rimraf lib-es6",
    "compile": "yarn run compile:es6",
    "compile:es6": "BABEL_ENV=production babel ./src  --out-dir ./lib-es6",
    "compile:umd": "webpack -p",
    "test": "jest --env=node --runInBand --forceExit",
    "test:coverage": "jest --env=node --coverage --runInBand --forceExit",
    "prepublish": "yarn run compile",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:ci": "eslint --quiet --format junit --output-file ../../.artifacts/lint_results/server-bridge.xml src"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@stellarjs/client-axios": "^0.11.2",
    "@stellarjs/client-engine.io": "^0.11.2",
    "axios": "^0.18.0",
    "babel-cli": "^6.24.1",
    "babel-jest": "^22.0.4",
    "engine.io-client": "3.1.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-better-mutation": "^1.1.2",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-lodash": "2.4.4",
    "eslint-plugin-promise": "3.5.0",
    "jest": "^22.4.3",
    "jsonwebtoken": "^8.2.1",
    "rimraf": "^2.6.1",
    "url": "^0.11.0"
  },
  "dependencies": {
    "@stellarjs/core": "^0.11.2",
    "@stellarjs/mw-log-trace": "^0.11.2",
    "@stellarjs/stellar-error": "^0.11.2",
    "@stellarjs/transport-bull": "^0.11.2",
    "@stellarjs/transport-socket": "^0.11.2",
    "bluebird": "^3.4.7",
    "body-parser": "^1.18.3",
    "engine.io": "~3.2.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "lodash": "^4.17.4",
    "nanoid": "^1.2.1",
    "safe-json-stringify": "^1.0.4"
  }
}

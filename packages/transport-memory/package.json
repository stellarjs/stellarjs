{
  "name": "@stellarjs/transport-memory",
  "version": "0.7.1",
  "license": "MIT",
  "main": "lib-es6/index.js",
  "src": [
    "src/**/*"
  ],
  "scripts": {
    "ci": "yarn run lint && yarn run test-coverage",
    "clean": "rimraf lib lib-es6",
    "compile": "yarn run compile:es6",
    "compile:es6": "babel ./src  --out-dir ./lib-es6",
    "test": "jest",
    "test:coverage": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls.js",
    "prepublish": "yarn run compile",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "jest": "^20.0.4",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "bluebird": "3.4.7"
  }
}

{
  "name": "@stellarjs/bridge",
  "version": "0.5.5",
  "main": "lib-es6/index.js",
  "src": [
    "src/**/*"
  ],
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "scripts": {
    "ci": "yarn run lint && yarn run test-coverage",
    "clean": "rimraf lib-es6",
    "compile": "yarn run compile:es6",
    "compile:es6": "babel ./src  --out-dir ./lib-es6",
    "compile:umd": "webpack -p",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublish": "yarn run compile",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@stellarjs/engine.io-client": "^0.5.5",
    "engine.io-client": "3.1.1",
    "engine.io": "3.1.0",
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "jest": "^20.0.4",
    "rimraf": "^2.6.1",
    "url": "^0.11.0"
  },
  "peerDependencies": {
    "engine.io": "2-3"
  },
  "dependencies": {
    "@stellarjs/core": "^0.5.4",
    "@stellarjs/transport-redis": "^0.5.4",
    "@stellarjs/transport-socket": "^0.5.4",
    "bluebird": "3.4.7",
    "lodash": "^4.17.4",
    "safe-json-stringify": "^1.0.4"
  }
}
